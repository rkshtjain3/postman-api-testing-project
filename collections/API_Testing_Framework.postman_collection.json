          "name": "GET All Posts",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Validate HTTP status code",
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "// Performance validation - response time should be under 2 seconds",
                  "pm.test('Response time is less than 2000ms', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(2000);",
                  "});",
                  "",
                  "// Data type validation - response should be an array",
                  "pm.test('Response is an array', function () {",
                  "    const responseJson = pm.response.json();",
                  "    pm.expect(responseJson).to.be.an('array');",
                  "});",
                  "",
                  "// Content validation - array should contain posts",
                  "pm.test('Array contains posts', function () {",
                  "    const responseJson = pm.response.json();",
                  "    pm.expect(responseJson.length).to.be.greaterThan(0);",
                  "});",
                  "",
                  "// Schema validation - verify post object structure",
                  "pm.test('Post schema validation', function () {",
                  "    const responseJson = pm.response.json();",
                  "    const post = responseJson[0];",
                  "    pm.expect(post).to.have.property('userId');",
                  "    pm.expect(post).to.have.property('id');",
                  "    pm.expect(post).to.have.property('title');",
                  "    pm.expect(post).to.have.property('body');",
                  "});",
                  "",
                  "// Data type validation for post properties",
                  "pm.test('Post properties have correct data types', function () {",
                  "    const responseJson = pm.response.json();",
                  "    const post = responseJson[0];",
                  "    pm.expect(post.userId).to.be.a('number');",
                  "    pm.expect(post.id).to.be.a('number');",
                  "    pm.expect(post.title).to.be.a('string');",
                  "    pm.expect(post.body).to.be.a('string');",
                  "});"
                ]
              }
            }
          ],
